{
  "name": "drizzle-express-template",
  "version": "1.0.0",
  "description": "A boilerplate for building RESTful APIs using Express, Drizzle, and TypeScript. It provides a structured and scalable foundation to kickstart your backend projects with best practices and a solid architecture.",
  "main": "dist/main.js",
  "scripts": {
    "dev": "nodemon",
    "clean": "rm -rf dist/",
    "start": "node dist/main.js",
    "test": "jest",
    "test:watch": "npm run test -- --watchAll",
    "build:dev": "tsc -p tsconfig.json",
    "build": "npm run clean && tsc -p tsconfig.json",
    "prepare": "husky"
  },
  "keywords": [
    "express",
    "rest",
    "template",
    "drizzle"
  ],
  "author": "Raj Mazumder <rajmazumder27.08.2001@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.14.11",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "^0.23.0",
    "husky": "^9.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.3",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.32.0",
    "express": "^4.19.2",
    "module-alias": "^2.2.3"
  },
  "_moduleAliases": {
    "@": "dist/"
  }
}
