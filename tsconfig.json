{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "*"
            ]
        },
        "rootDir": "src",
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true
    },
    "include": [
        "src",
    ],
    "exclude": [
        "**/__tests__/*"
    ]
}